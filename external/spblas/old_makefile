#ARCH=pgilinux
ARCH=pclinux
#ARCH=ultra
#ARCH=alpha
#ARCH=irix64
include base.make


SRC_C    = cblas_duscr_vbr.c cblas_dusmm.c 

LDFLAGS = -O $(LIB) $(SYSLIBS)

OBJS   = $(SRC_C:.c=.o) $(SRC_F:.f=.o)

#####################################
# Define implicit compilation rules #
#####################################

TARGET=../lib/libspblas.a
all: $(TARGET)

%.o:%.f
	$(FC) $(FFLAGS) -c $<
%.o:%.c
	$(CC) $(CFLAGS) -c $<

# library 

$(TARGET): $(OBJS)
		$(AR) rv $(TARGET) $(OBJS) 
clean:
	@echo "cleaning ..."
	/bin/rm -f $(OBJS) $(TARGET) *~
