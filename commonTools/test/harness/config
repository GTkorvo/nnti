###############################################################################
#
# beowulf nightly serial
#
###############################################################################

RUN (beowulf-nightly-serial) {
    
    BUILD-DIR           = SERIAL;
    COMM                = serial;
    INVOKE-CONFIGURE    = linux-beowulf;
    TEST-CATEGORY       = FRAMEWORK;
    TEST-DATA-DIR       = /common/TrilinosTestHarness/TrilinosTestData;
    SSG-USERNAME        = mnphenow;

}

###############################################################################
#
# beowulf nightly mpi
#
###############################################################################

RUN (beowulf-nightly-mpi) {
    
    BUILD-DIR           = MPI;
    COMM                = mpi;
    INVOKE-CONFIGURE    = linux-beowulf-mpi;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 16;
    MPI-START           = lamboot;
    MPI-STOP            = lamhalt;    
    TEST-DATA-DIR       = /common/TrilinosTestHarness/TrilinosTestData;
    SSG-USERNAME        = mnphenow;

}

###############################################################################
