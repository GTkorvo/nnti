###############################################################################
#
# stratus nightly mpi
#
###############################################################################

RUN (stratus-nightly-mpi) {
    
    BUILD-DIR           = MPI-NEW;
    COMM                = mpi;
    INVOKE-CONFIGURE    = osf-stratus-mpi;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 16;
    MPI-START           = lamboot;
    MPI-STOP            = lamhalt;    
    MPI-GO              = prun -n;
    TTR-DIR             = /projects/trilinos/TrilinosTestResults;
    SSG-USERNAME        = mnphenow;

}

