###############################################################################
#
# s858352 nightly mpi
#
###############################################################################

RUN (s858352-nightly-mpi) {

    BUILD-LABEL         = default;
    BUILD-DIR           = MPI;
    COMM                = mpi;
    INVOKE-CONFIGURE    = darwin-s858352-mpi;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 4;
    MPI-START           = lamboot;
    MPI-GO              = mpirun -x DYLD_LIBRARY_PATH -np ;
    MPI-PING            = mpitask;
    MPI-STOP            = lamhalt;
    TTR-DIR             = /Users/mnpheno/TrilinosTestHarness/TrilinosTestResults;
    SSG-USERNAME        = mnpheno;

}

