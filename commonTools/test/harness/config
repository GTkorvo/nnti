    INVOKE-CONFIGURE    = linux-herouxsmp-mpi;
    MAKE-COMMAND        = make -j4;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 4;
    MPI-START           = lamboot;
    MPI-STOP            = lamhalt;    
    TEST-DATA-DIR       = /u/TrilinosTestHarness/TrilinosTestData;
    SSG-USERNAME        = mnphenow;

}

