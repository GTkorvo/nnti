#!/bin/sh

##################################################################
# Configuration of Trilinos for use with the development version 
# of Sundance.
#
# This will NOT work with the old version of Sundance
##################################################################


BUILD_DIR=`pwd`

../configure --enable-mpi --with-mpi-compilers \
CXXFLAGS="-g -O0 -Wreturn-type -ansi -pedantic " \
--with-libs="-lexpat" \
--disable-default-packages \
--enable-teuchos --enable-teuchos-extended \
--enable-teuchos-complex --enable-teuchos-expat \
--enable-thyra \
--enable-epetra --enable-epetra-thyra \
--enable-tsfextended \
--enable-ml \
--disable-ml-examples \
--enable-epetraext \
--enable-aztecoo \
--enable-ifpack \
--enable-nox \
--enable-nox-tsf \
--enable-nox-tsf-examples \
--disable-loca \
--with-gnumake \
--with-install="/usr/bin/install -c -p" \
--prefix=$BUILD_DIR


