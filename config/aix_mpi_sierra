	CXX=mpKCC CC=mpcc F77=mpxlf \
	CXXFLAGS="-g -tused" \
	CPPFLAGS="-g -tused" \
	--enable-mpi \
        --enable-nox --enable-nox-epetra \
        --with-mpi-incdir=. \
     --with-mpi-libdir=. 

