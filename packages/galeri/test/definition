#
# FRAMEWORK group
#

(FRAMEWORK, INSTALL, GaleriExamples) {
    DIRS = ../example;
    ARGS = -v;
    COMM = SERIAL, MPI(1);
}

(FRAMEWORK, INSTALL, GaleriTests) {
    DIRS = VerySimple;
    ARGS = -v;
    COMM = SERIAL;
}

(FRAMEWORK, INSTALL, GaleriPyExamples) {
        DIRS = ../python/example;
	DESCEND_DIRS = YES;
	ARGS = --testharness;
	EXIT-STATUS = STRING-COMPARISON;
        COMM = SERIAL, MPI(1-4);
}

(FRAMEWORK, INSTALL, GaleriPyTests) {
        DIRS = ../python/test;
	ARGS = --testharness;
	EXIT-STATUS = STRING-COMPARISON;
        COMM = SERIAL, MPI(1-4);
}
