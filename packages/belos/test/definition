(FRAMEWORK,INSTALL) {
    TESTS = BlockCG/bl_cg_hb.exe,
            BlockCG/bl_pcg_hb.exe;
            BlockCG/bl_cg_complex.exe;
    EXIT-STATUS = STRING-COMPARISON;
    ARGS = --verbose;
    COMM = SERIAL, MPI;
}

