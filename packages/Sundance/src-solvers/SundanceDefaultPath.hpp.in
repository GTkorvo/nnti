#ifndef SUNDANCEDEFAULTPATH_H
#define SUNDANCEDEFAULTPATH_H

using std::string;

namespace SundanceUtils
{
inline string defaultSundancePath()
{ 
  static string cwd = ".";
  static string sundanceSrcEtc = "@SUNDANCE_BUILD_DIRECTORY@/../../../packages/Sundance/etc:@SUNDANCE_BUILD_DIRECTORY@/../etc";
  static string sundanceSrcMesh = "@TRILINOS_DATA_DIR@/Sundance/meshes";
  static string sundanceSrcData = "@SUNDANCE_BUILD_DIRECTORY@/../../../examples-tutorial/data:@SUNDANCE_BUILD_DIRECTORY@/../examples-tutorial/data";
  static string isundanceSrcEtc = "@prefix@/etc:@prefix@/../packages/Sundance/etc";
  static string isundanceSrcData = "@prefix@/examples-tutorial/data:@prefix@/../packages/Sundance/examples-tutorial/data";
  static string rtn = cwd + ":" + sundanceSrcEtc + ":" + isundanceSrcEtc 
                    + ":" + sundanceSrcMesh 
                    + ":" + sundanceSrcData + ":" + isundanceSrcData ;

  return rtn;
}
}

#endif


