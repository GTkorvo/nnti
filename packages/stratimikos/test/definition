(FRAMEWORK, INSTALL) {
    TESTS = ../example/simple_stratimikos_example.exe;
    ARGS =  --linear-solver-params-used-file=lowsf.default.used.xml,
      --extra-linear-solver-params="<ParameterList><Parameter name=\"Linear Solver Type\" type=\"string\" value=\"AztecOO\"/></ParameterList>" --linear-solver-params-used-file=lowsf.aztecoo.used.xml;
      --extra-linear-solver-params="<ParameterList><Parameter name=\"Linear Solver Type\" type=\"string\" value=\"Amesos\"/></ParameterList>" --linear-solver-params-used-file=lowsf.amesos.used.xml;
    COMM = MPI(1),SERIAL;
}

