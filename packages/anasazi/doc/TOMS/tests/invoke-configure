#!/bin/csh 

../configure -C \
--prefix="/home/cgbaker/Trilinos/ICC" \
 CC=icc \
CXX=icpc \
F77=ifort \
CFLAGS="-O2 -xN" CXXFLAGS="-O2 -xN" \
--with-blas="-L/opt/intel/mkl/8.0.2/lib/32 -lmkl_lapack -lmkl_ia32 -lguide -lpthread -lpthread_nonshared" \
--with-gnu-make --enable-export-makefiles \
--disable-default-packages --disable-tests --disable-examples \
--enable-teuchos  --enable-teuchos-extended  --enable-teuchos-complex \
--enable-triutils \
--enable-epetra \
--enable-anasazi --enable-anasazi-tests --disable-anasazi-examples


