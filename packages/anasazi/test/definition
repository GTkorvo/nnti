(FRAMEWORK,INSTALL,AnasaziTests,AnasaziEpetraTests) {
    DIRS = BlockDavidson,
           BlockKrylovSchur,
           LOBPCG,
           ModalSolverUtils,
           MVOPTester;
    EXIT-STATUS = STRING-COMPARISON;
    ARGS = -v;
    COMM = SERIAL, MPI;
}

(FRAMEWORK,INSTALL,AnasaziTests,AnasaziThyraTests) {
