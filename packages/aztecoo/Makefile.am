AUTOMAKE_OPTIONS = foreign


## #######################################################################
## Aclocal command (rarely used - don't worry about it)
## #######################################################################
ACLOCAL	= aclocal -I config

## #######################################################################
## Additional files to be included in distribution for 'make dist'
## #######################################################################
#EXTRA_DIST =

## #######################################################################
## Tools in the auxillary directory 
## #######################################################################
AUX_DIST = config/install-sh config/missing config/mkinstalldirs

## #######################################################################
## Files to be deleted by 'make maintainer-clean'
## #######################################################################
MAINTAINERCLEANFILES = Makefile.in aclocal.m4 autom4te.cache/* \
	configure config.status config.log \
	src/common/config-h.in src/common/stamp-h.in \
	$(AUX_DIST) 

#The following line helps the test harness recover from build errors.
                                                                                
all-local:
	@echo ""
	@echo "Trilinos package aztecoo built successfully"
	@echo "To check the installation, simply type \"make run-examples\"."
	@echo "For more details, please refer to the instructions"
	@echo "contained in Trilinos/doc/check_installation.txt"
	@echo ""

## #######################################################################
## Subdirectories to be make'd recursively
## #######################################################################

#The test for AztecOO depends on an example, so we just build the examples
#if the tests are going to be built.

if BUILD_TESTS
TEST_SUBDIR=test
EXAMPLE_SUBDIR=example
else

if BUILD_EXAMPLES
EXAMPLE_SUBDIR=example
endif

endif

if PYTHON_USE
PYTHON_SUBDIR=python
endif

if ENABLE_AZTECOO_THYRA
THYRA_SUBDIR=thyra
else
THYRA_SUBDIR=
endif

SUBDIRS = src $(THYRA_SUBDIR) $(EXAMPLE_SUBDIR) $(TEST_SUBDIR) $(PYTHON_SUBDIR)

## #######################################################################
## Target for circular dependencies
## #######################################################################

if ENABLE_AZTECOO_THYRA
BUILD_THYRA_SUBLIB=cd $(top_builddir)/thyra/src ; make
else
BUILD_THYRA_SUBLIB=
endif

all-libs:
	cd $(top_builddir)/src ; make all-libs
	$(BUILD_THYRA_SUBLIB)

## #######################################################################
## Export Makefile Installation
## #######################################################################
if USING_EXPORT_MAKEFILES

install-exec-hook:	
	cp $(top_builddir)/Makefile.export.aztecoo $(exec_prefix)/include/.
	$(PERL_EXE) $(top_srcdir)/config/replace-install-prefix.pl \
		--exec-prefix=$(exec_prefix) \
		--my-export-makefile=Makefile.export.aztecoo \
		--my-abs-top-srcdir=@abs_top_srcdir@ \
		--my-abs-incl-dirs=@abs_top_builddir@/src:@abs_top_srcdir@/src \
		--my-abs-lib-dirs=@abs_top_builddir@/src \
		--dep-package-abs-builddirs=@abs_top_builddir@/../epetra:@abs_top_builddir@/../triutils:@abs_top_builddir@/../thyra:@abs_top_builddir@/../teuchos
	$(PERL_EXE) $(top_srcdir)/config/generate-makeoptions.pl $(top_builddir)/src/Makefile aztecoo > $(exec_prefix)/include/Makefile.export.aztecoo.macros

uninstall-hook:
	rm -f $(exec_prefix)/include/Makefile.export.aztecoo
	rm -f $(exec_prefix)/include/Makefile.export.aztecoo.macros

else 

install-exec-hook:

uninstall-hook:

endif

## #######################################################################
## Run examples and tests
