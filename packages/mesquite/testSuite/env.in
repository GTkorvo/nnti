#!/bin/sh

MOAB_DIR=@MOAB_DIR@
AOMD_DIR=@AOMD_DIR@
OVERTURE_DIR=@OVERTURE_DIR@
HDF5_DIR=@HDF5_DIR@
BABEL_DIR=@BABEL_DIR@

if [ -n "$MOAB_DIR" ]; then
  LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${MOAB_DIR}:${MOAB_DIR}/TSTT"
  if [ -n "$HDF5_DIR" ]; then
    LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${HDF5_DIR}/lib"
  fi
fi

if [ -n "$AOMD_DIR" ]; then
  LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${AOMD_DIR}/lib"
fi

if [ -n "OVERTURE_DIR" ]; then
  LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${OVERTURE_DIR}/lib"
fi

if [ -n "BABEL_DIR" ]; then
  LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${BABEL_DIR}/lib"
fi

export LD_LIBRARY_PATH

