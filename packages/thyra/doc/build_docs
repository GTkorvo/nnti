#!/bin/bash

# Remove the directories to make sure that we don't have rebuild problems
# that can sometimes happen with doxygen

rm -r ../src/utils/doc/html

rm -r ../src/ana/rtop/doc/html

rm -r ../src/ana/operator_vector/doc/html

rm -r ../src/ana/nonlinear/doc/html

rm -r html

# Create new directories manually since the doxygen exe under windows
# seems to be messing this up.

mkdir ../src/utils/doc/html

mkdir ../src/ana/rtop/doc/html

mkdir ../src/ana/operator_vector/doc/html

mkdir ../src/ana/nonlinear/doc/html

mkdir html

# Build the documentation

./build_docs_guts
