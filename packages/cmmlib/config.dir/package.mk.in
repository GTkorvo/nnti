#
# Try to figure out Fortran name mangling
#

sgemm = @sgemm@

ifeq ("$(sgemm)", "sgemm")
 FORTRAN_MANGLE=-DFORTRAN_MANGLE_NONE
endif

ifeq ("$(sgemm)", "sgemm_")
 FORTRAN_MANGLE=-DFORTRAN_MANGLE_
endif

ifeq ("$(sgemm)", "SGEMM")
 FORTRAN_MANGLE=-DFORTRAN_MANGLE_UPPER
endif

ifeq ("$(sgemm)", "SGEMM_")
 FORTRAN_MANGLE=-DFORTRAN_MANGLE_UPPER_
endif
