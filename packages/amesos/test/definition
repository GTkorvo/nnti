}

#
#  Some of the following tests take too long (up to 30 minutes) to run as an installation test
#
(FRAMEWORK) {   
    DIRS = scripts/daily/mpi;
    COMM = CUSTOM-MPI; 
    ARGS = NightlyTest True True;      
    EXIT-STATUS = STRING-COMPARISON ; 
}
(FRAMEWORK) {   
    DIRS = scripts/daily/serial;
    COMM = SERIAL; 
    ARGS = NightlyTest True True;      
    EXIT-STATUS = STRING-COMPARISON ; 
}

