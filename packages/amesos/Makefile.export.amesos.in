# Required dependency on Teuchos and Epetra
include @abs_top_builddir@/../teuchos/Makefile.export.teuchos
include @abs_top_builddir@/../epetra/Makefile.export.epetra

# Amesos has optional dependencies on epetraext and triutils but ONLY for
# it's examples.  Therefore, they do not have to be added here.

AMESOS_INCLUDES = \
        $(TEUCHOS_INCLUDES) \
        $(EPETRA_INCLUDES) \
	-I@abs_top_srcdir@/src \
        -I@abs_top_srcdir@/src/klu_btf \
        -I@abs_top_srcdir@/src/klu_kernel \
        -I@abs_top_srcdir@/src/btf \
        -I@abs_top_srcdir@/src/AMD \
        -I@abs_top_srcdir@/src/AMD/Include \
        -I@abs_top_srcdir@/src/AMD/Source \
        -I@abs_top_srcdir@/src/colamd \
        -I@abs_top_srcdir@/src/ksparse \
	-I@abs_top_builddir@/src

AMESOS_LIBS = @LDFLAGS@ -L@abs_top_builddir@/src -lamesos $(EPETRA_LIBS) $(TEUCHOS_LIBS) @LAPACK_LIBS@ @BLAS_LIBS@ @LIBS@ @FLIBS@ 
