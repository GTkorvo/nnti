LOCA_EPETRA_TEST_LIBS_BASE = -L@abs_top_builddir@/test/epetra/LOCA_TestProblems/ -llocatestproblems -L@abs_top_builddir@/test/utils -lnoxtestutils $(LOCA_LIBS)
@USING_GNUMAKE_TRUE@LOCA_EPETRA_TEST_LIBS = $(shell $(PERL_EXE) $(top_srcdir)/config/strip_dup_incl_paths.pl $(LOCA_EPETRA_TEST_LIBS_BASE))
