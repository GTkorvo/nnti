# NOX Epetra Multiphysics tests
(FRAMEWORK,INSTALL, MULTIPHYSICS) {
    DIRS = epetra/MultiPhysics;
    EXIT-STATUS = STRING-COMPARISON(Test passed!);
    ARGS = --verbose --golddir="./epetra/MultiPhysics";
    COMM = SERIAL;
}

