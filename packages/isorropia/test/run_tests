#!/bin/sh

if [ ${#} != 2 ] ; then \
echo " ";\
echo " usage: run_tests <path-to-Trilinos> <build-sub-dir>";\
echo " ";\
echo " example: 'runtests /home/me/Trilinos bld_linux'";\
echo " ";\
exit 1;\
fi

trilinosdir=${1}
builddir=${2}

perl ../../../commonTools/test/utilities/runtests \
   --comm=mpi --category=FRAMEWORK --packages=isorropia \
   --trilinos-dir=${trilinosdir} \
   --build-dir=${builddir} \
   --mpi-go="mpirun -machinefile ~/machinefile -np " \
   --output-dir=${trilinosdir}/${builddir}/packages/isorropia/test

