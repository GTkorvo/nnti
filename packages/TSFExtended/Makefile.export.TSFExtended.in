# Required dependence on thyra, epetra, teuchos, ifpack, and aztecoo
include @abs_top_builddir@/../epetra/Makefile.export.epetra
include @abs_top_builddir@/../thyra/Makefile.export.thyra
include @abs_top_builddir@/../teuchos/Makefile.export.teuchos
include @abs_top_builddir@/../aztecoo/Makefile.export.aztecoo
include @abs_top_builddir@/../ifpack/Makefile.export.ifpack
include @abs_top_builddir@/../epetraext/Makefile.export.epetraext
include @abs_top_builddir@/../nox/Makefile.export.nox

# Optional dependence on ml
@BUILD_ML_TRUE@include @abs_top_builddir@/../ml/Makefile.export.ml

TSFEXTENDED_INCLUDES = \
	-I@abs_top_srcdir@/src \
	-I@abs_top_builddir@/src \
  -I$(top_srcdir)/src \
  -I$(top_srcdir)/src/Concrete \
  -I$(top_srcdir)/src/LinearSolvers \
  -I$(top_srcdir)/src/NonlinearSolvers \
  -I$(top_srcdir)/src/Operators \
  -I$(top_srcdir)/src/Preconditioners \
  -I$(top_srcdir)/src/Utils \
  -I$(top_srcdir)/src/Vectors \
	$(TEUCHOS_INCLUDES) \
  $(EPETRA_INCLUDES) \
  $(AZTECOO_INCLUDES) \
  $(ML_INCLUDES) \
  $(EPETRAEXT_INCLUDES) \
  $(THYRA_INCLUDES) \
  $(NOX_INCLUDES) \
	$(IFPACK_INCLUDES)

TSFEXTENDED_LIBS = @LDFLAGS@ \
-L@abs_top_builddir@/src \
-lTSFExtended $(NOX_LIBS) $(ML_LIBS) $(AZTECOO_LIBS) $(IFPACK_LIBS) \
$(EPETRAEXT_LIBS) \
$(EPETRA_LIBS) \
$(TEUCHOS_LIBS) 

EXPORT_INCLUDES = $(shell $(PERL_EXE) $(top_srcdir)/config/strip_dup_incl_paths.pl $(TSFEXTENDED_INCLUDES))




CFLAGS = $(TEUCHOS_CFLAGS)
FFLAGS = $(TEUCHOS_FFLAGS)
CXXFLAGS = $(TEUCHOS_CXXFLAGS) $(EXPORT_INCLUDES)
LDFLAGS = $(TEUCHOS_LDFLAGS)

MPI_LIBS = $(TEUCHOS_MPI_LIBS)
MPI_LIBDIR = $(TEUCHOS_MPI_LIBDIR)
MPI_INC = $(TEUCHOS_MPI_INC)
MPI_DIR = $(TEUCHOS_MPI_DIR)

FLIBS = $(TEUCHOS_FLIBS)
BLAS_LIBS = $(TEUCHOS_BLAS_LIBS)
LAPACK_LIBS = $(TEUCHOS_LAPACK_LIBS)



