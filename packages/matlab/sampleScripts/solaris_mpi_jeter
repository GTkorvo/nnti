#!/bin/csh -f
unsetenv LD_LIBRARY_PATH
../configure --enable-mpi \
# general Trilinos package configuration \
#--enable-teuchos \
--disable-ifpack  \
--disable-new_package \
--disable-nox \
# configure blas \
--with-lapack="/home/u/jacross/progs/lib/lapack_SUN4SOL2.a" \
# general lib includes \
--with-ldflags="-I/usr/lib/" \
# mpi lib includes \
--with-mpi-libs="-lmpich -lnsl -lsocket -lrt" \
--with-mpi-incdir="/Net/local/pkg/mpi/mpi-3.0/include" \
--with-mpi-libdir="/Net/local/pkg/mpi/mpi-3.0/lib" \
# matlab includes and Trilinos includes \
--with-incdirs="-I/Net/local/share/pkg/matlab/current/extern/include -I/home/u/jacross/Trilinos/SOLARIS_MPI/include" \
# matlab lib includes and Trilinos lib includes \
--with-libdirs="-L/Net/local/share/pkg/matlab/current/extern/lib/sol2 -L/home/u/jacross/Trilinos/SOLARIS_MPI/lib" \
# mpi includes \
CPPFLAGS="-I/Net/local/pkg/mpi/mpi-3.0/build/solaris/ch_p4/include" \
# CC compiler command \
CC=gcc \
# install location \
--prefix="${TRILINOS_HOME}/${TRILINOS_ARCH}"
