#!/bin/csh -f

setenv PATH '/usr/bin:/bin:/home/schake/mpich2/bin:/opt/maui/bin:/opt/torque/bin:/opt/torque/sbin:/cluster/bin:/usr/kerberos/bin:/usr/local/bin'


umask 077
set subfile="sub.$$"

if ("$#" < 2) then
  echo "usage: ${0} #nodes cmdline"
  exit 1
endif

set n="$1"
set t="$2"
set z="$argv[3-]"

qsub << __END
#!/bin/tcsh
#PBS -A 12345/01.01
#PBS -N zdrive
#PBS -l walltime=${t}
#PBS -l nodes=${n}:ppn=2
 
echo "===== \`hostname\` starting mpd -n $n -f \$PBS_NODEFILE"
mpdboot -n ${n} --file=\$PBS_NODEFILE --rsh=rsh --shell
sleep 5
mpdtrace -l
echo "===== starting job"
date
$z
date
mpdallexit
__END

