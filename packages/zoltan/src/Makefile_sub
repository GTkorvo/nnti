#
# Dynamic Load Balance Library Makefile for machine dependent directories
#

ifndef DCC
DCC=$(CC)
endif

DEPS=-M

include $(OBJ_FILES:.o=.d)

ifdef MAIN_OBJ
include $(MAIN_OBJ:.o=.d)
endif

%.o:	%.c
	@echo "Compiling $<..."
	@$(CC) $(DEFS) -c $<

%.d:	%.c
	@echo "(Re)Building dependency for $<..."
	@$(SHELL) -ec '$(DCC) $(DEPS) $(DEFS) $< | sed '\''s/$*.o/& $@/g'\'' > $@'

inc_fortran:
	@cd ../fort; $(MAKE) "CC=$(CC)" "F90=$(F90)" \
	   "F90_MODULE_PREFIX=$(F90_MODULE_PREFIX)" \
	   "ZOLTAN_OBJ_DIR=$(ZOLTAN_OBJ_DIR)" \
	   "SPPR_HEAD=$(SPPR_HEAD)" "LOCAL_F90=$(LOCAL_F90)"

$(LIB_NAME):	$(OBJ_FILES:.o=.d) $(OBJ_FILES) $(INC_FORTRAN)
		@echo "creating library..."
		@$(AR) $(LIB_NAME) $(OBJ_FILES) $(FOBJ_FILES)
		@$(RANLIB) $(LIB_NAME)

$(TARGET):	$(DEP_LIBS) $(LIB_NAME) $(MAIN_OBJ:.o=.d) $(MAIN_OBJ)
		@echo "linking driver"
		@$(CC) $(MAIN_OBJ) -o $(TARGET) $(LNK_LIBS)

#		@purify -best_effort -follow-child-processes=yes -cache-dir=/tmp/purify $(CC) $(MAIN_OBJ) -o $(TARGET) $(LNK_LIBS)

