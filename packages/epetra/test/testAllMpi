#!/bin/tcsh
set file = log.mpi.`eval date +%d%b%Y:%T`
echo $file
rm -f $file
echo "Date: " `eval date` >>& $file
echo `uname -a` >>& $file
foreach f (BlockMap Comm CrsGraph CrsMatrix CrsRectMatrix ImportExport Map MultiVector Object VbrMatrix Vector)
	cd $f
	make TRILINOS_COMM=MPI TRILINOS_ID=LAM clobber; make TRILINOS_COMM=MPI TRILINOS_ID=LAM
	foreach g(*.exe)
		echo "############" $g "##############" >>& ../$file
		mpigo $g 8 -v >>& ../$file
	end
	make TRILINOS_COMM=MPI TRILINOS_ID=LAM clobber
	cd ..
end
